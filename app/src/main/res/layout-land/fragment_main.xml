<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_app_color"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="100dp"
            android:paddingRight="100dp">

            <!-- Main header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_bg_app_color">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/lato_heavy"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/about_head_text"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/content_header_color" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/open_favorites_floating_action_button"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/no_content_description"
                    android:src="@drawable/baseline_favorite_white_24dp"
                    app:backgroundTint="@color/white"
                    app:elevation="4dp"
                    app:maxImageSize="34dp"
                    app:rippleColor="@color/colorPrimaryLight"
                    app:srcCompat="@drawable/baseline_favorite_white_24dp"
                    app:tint="@color/colorPrimaryLight" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/no_content_description"
                    android:scaleType="center"
                    android:src="@drawable/syncrotube_128" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/shareAppButton"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/no_content_description"
                    android:src="@drawable/baseline_share_white_24dp"
                    app:backgroundTint="@color/white"
                    app:elevation="4dp"
                    app:maxImageSize="34dp"
                    app:rippleColor="@color/colorPrimaryLight"
                    app:srcCompat="@drawable/baseline_share_white_24dp"
                    app:tint="@color/colorPrimaryLight"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/lato_medium"
                    android:padding="8dp"
                    android:text="@string/syncrotube_helps_you_head_text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/darker_gray" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/about_app1_text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/about_content_color"
                    app:drawableStartCompat="@drawable/playlist_64_gl" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/about_app2_text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/about_content_color"
                    app:drawableStartCompat="@drawable/synchroner_64" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/about_app3_text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/about_content_color"
                    app:drawableStartCompat="@drawable/chat_64" />
            </LinearLayout>

            <!-- create new playlist button -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_round_colored"
                app:mrl_rippleColor="@color/colorPrimaryDark"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="20dp">

                <Button
                    android:id="@+id/newPlaylistButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/create_new_album_button_text"
                    android:textColor="@color/color_new_playlist"
                    android:textStyle="bold" />

            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </ScrollView>
</layout>